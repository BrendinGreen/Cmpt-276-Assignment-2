<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student.name %></td>
        <td><%= enroll.student.email %></td>
        <td><%= link_to 'Show', enroll.student %></td>
        <td><%= link_to 'Edit', edit_student_path(enroll.student) %></td>
        <td><%= link_to 'Remove From Course', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
