<div class="container-color">
  <p id="notice"><%= notice %></p>

  <h1>
    <strong>Name:</strong>
    <%= @course.name %>
  </h1>

  <h3>
    <strong>Description:</strong>
    <%= @course.description %>
  </h3>

  <h3>
    <strong>Enrollments:</strong>
  </h3>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Percent</th>
        <th>Grade</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @enrolls.each do |enroll| %>
          <tr>
            <td><%= enroll.student.name %></td>
            <td><%= enroll.student.email %></td>
            <td><%= enroll.percentage %></td>
            <td><%= enroll.lettergrade %></td>
            <td><%= link_to 'Remove From Course',
                            enroll,
                            method: :delete,
                            data: { confirm: 'Are you sure?' },
                            class: 'btn btn-danger'%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>


  <a class="btn btn-primary"  href="/courses/<%= @course.id %>/histogram"> <span>Assign Grades</span> </a>

  <%= link_to 'Edit', edit_course_path(@course) %> |
  <%= link_to 'Back', courses_path %>
</div>

