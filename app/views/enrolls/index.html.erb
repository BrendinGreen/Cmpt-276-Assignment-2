<div class="container-color">
  <p id="notice"><%= notice %></p>

  <h1>Listing Enrolls</h1>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Student</th>
        <th>Course</th>
        <th>Percentage</th>
        <th>Lettergrade</th>
        <th colspan="5"></th>
      </tr>
      </thead>

      <tbody>
      <% @enrolls.each do |enroll| %>
          <tr>
            <td><%= enroll.student.name %></td>
            <td><%= enroll.course.name %></td>
            <td><%= enroll.percentage %></td>
            <td><%= (enroll.lettergrade) ? enroll.lettergrade : 'Not yet set' %></td>

            <td><%= link_to 'Show',
                            enroll,
                            class: 'btn btn-primary'%></td>
            <td><%= link_to 'Edit',
                            edit_enroll_path(enroll),
                            class: 'btn btn-warning'%></td>
            <td><%= link_to 'Destroy',
                            enroll,
                            method: :delete,
                            data: { confirm: 'Are you sure?' },
                            class: 'btn btn-danger'%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>


  <br>

  <%= link_to 'New Enroll', new_enroll_path %>
</div>